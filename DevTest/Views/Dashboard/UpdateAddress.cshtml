<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DebtCollectionPortal - Update Address</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/shared-styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar">
                    <div class="p-3">
                        <h4 class="text-center mb-4">
                            <i class="fas fa-shield-alt me-2"></i>
                            DebtCollectionPortal
                        </h4>
                        @Html.Partial("_DashboardMenu")
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="mb-1">
                                <i class="fas fa-map-marker-alt me-2"></i>Update Address
                            </h2>
                            <p class="text-muted mb-0">Update your current address information</p>
                        </div>
                        <a href="dashboard.html" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>

                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Current Address -->
                            <div class="card mb-4">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-home me-2"></i>Current Address
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="current-address">
                                        <h6 class="fw-bold mb-3">John Michael Doe</h6>
                                        <p class="mb-1">123 Main Street</p>
                                        <p class="mb-1">Apartment 4B</p>
                                        <p class="mb-1">London, SW1A 1AA</p>
                                        <p class="mb-0">United Kingdom</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Update Form -->
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-edit me-2"></i>New Address Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form id="addressForm">
                                        <div class="row">
                                            <div class="col-md-8 mb-3">
                                                <label for="addressLine1" class="form-label">Address Line 1 *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                                    <input type="text" class="form-control" id="addressLine1" name="addressLine1"
                                                           value="123 Main Street" required>
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-3">
                                                <label for="addressLine2" class="form-label">Address Line 2</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                                    <input type="text" class="form-control" id="addressLine2" name="addressLine2"
                                                           value="Apartment 4B">
                                                </div>
                                                <div class="form-text">Optional</div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="city" class="form-label">City *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                                    <input type="text" class="form-control" id="city" name="city"
                                                           value="London" required>
                                                </div>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label for="postcode" class="form-label">Postcode *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-mail-bulk"></i></span>
                                                    <input type="text" class="form-control" id="postcode" name="postcode"
                                                           value="SW1A 1AA" required>
                                                </div>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label for="country" class="form-label">Country *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                                    <select class="form-control" id="country" name="country" required>
                                                        <option value="United Kingdom" selected>United Kingdom</option>
                                                        <option value="England">England</option>
                                                        <option value="Scotland">Scotland</option>
                                                        <option value="Wales">Wales</option>
                                                        <option value="Northern Ireland">Northern Ireland</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="confirmAddress" required>
                                                <label class="form-check-label" for="confirmAddress">
                                                    I confirm that the above address information is accurate and up-to-date
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-2"></i>Update Address
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                                <i class="fas fa-undo me-2"></i>Reset
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Information Card -->
                            <div class="card">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Important Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Address updates are processed immediately
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            You'll receive confirmation via email
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                            Ensure all fields are accurate
                                        </li>
                                        <li class="mb-0">
                                            <i class="fas fa-shield-alt text-info me-2"></i>
                                            Your data is secure and encrypted
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- API Information -->
                            <div class="card mt-3">
                                <div class="card-header bg-dark text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-code me-2"></i>API Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <small class="text-muted">
                                        <strong>Endpoint:</strong><br>
                                        PUT /api/account/{accountId}/address<br><br>
                                        <strong>Required Fields:</strong><br>
                                        • addressLine1<br>
                                        • city<br>
                                        • postcode<br>
                                        • country<br><br>
                                        <strong>Optional Fields:</strong><br>
                                        • addressLine2
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.getElementById('addressForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const formData = new FormData(this);
            const addressData = {
                addressLine1: formData.get('addressLine1'),
                addressLine2: formData.get('addressLine2'),
                city: formData.get('city'),
                postcode: formData.get('postcode'),
                country: formData.get('country')
            };

            $.ajax({
                url: '/Account/UpdateAddress',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(addressData),
                success: function (response) {
                    window.location.href = response.redirectUrl;

                },
                error: function (xhr) {
                    console.error(xhr.responseText);
                }
            });
        });

        function resetForm() {
            document.getElementById('addressForm').reset();
            document.getElementById('addressLine1').value = '123 Main Street';
            document.getElementById('addressLine2').value = 'Apartment 4B';
            document.getElementById('city').value = 'London';
            document.getElementById('postcode').value = 'SW1A 1AA';
            document.getElementById('country').value = 'United Kingdom';
        }
    </script>
</body>
</html>
