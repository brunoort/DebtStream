@using Newtonsoft.Json
@{
    // Recupera o JSON armazenado no TempData
    var accountInfoJson = TempData["AccountInfo"] as string;

    // Desserializa o JSON para um objeto dinâmico ou um tipo específico
    var accountInfo = string.IsNullOrEmpty(accountInfoJson)
        ? null
        : JsonConvert.DeserializeObject<dynamic>(accountInfoJson);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DebtCollectionPortal - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
